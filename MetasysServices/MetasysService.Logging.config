
  <configuration>
  <log4net>
    <appender name="TraceAppender" type="log4net.Appender.TraceAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%thread] %-7level - %message%newline" />
      </layout>
    </appender>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="C:\ProgramData\Metasys Services\MetasysService.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="5000KB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{ISO8601} [%-15.15thread] %-7level %-40logger{3} - %message%newline" />
      </layout>
    </appender>

    <!-- 
      "root" allows us to set default values for all loggers
      The available logging levels are: ERROR, WARN, INFO, DEBUG (a.k.a. Verbose)
      -->
    <root>
      <level value="WARN" />
      <appender-ref ref="TraceAppender" />
      <appender-ref ref="RollingFileAppender" />
    </root>

  </log4net>
</configuration>
